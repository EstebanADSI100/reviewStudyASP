@*@model reviewStudyASP.Models.loginUser*@
@{
    ViewBag.Title = "Listar Login User";
}

<br />
<br />

<h2>@ViewBag.Title</h2>

<br />

<div class="container">
    <h2>Iniciar Sesión</h2>
    <form action="/exampleMethodsGetAndPost/listarUser" method="post">
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" id="email" placeholder="Ingrese el Email" name="email">
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" id="password" placeholder="Enter password" name="password">
        </div>
        <br />
        <button type="submit" class="btn btn-default">Enviar</button>
    </form>
</div>

<br />
<br />

<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Prueba Errada Email</th>
                <th>Prueba Errada Password</th>
                <th>Email And Password Correct</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>@Model.email.ToString()</td>
                <td>@Model.password.ToString()</td>
                <td>@ViewBag.Message</td>
            </tr>
        </tbody>
    </table>
</div>
